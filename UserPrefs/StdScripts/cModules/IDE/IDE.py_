# The simplest program - just show the Hello world!
import coat
# just show the text in the dialog with the OK button.
# most of 3DCoat functions accesible using the coat module
coat.dialog().text("Hello world!").ok().show()


class CoatIDE(coat.cIDE):
    def __init__(self):
        coat.cIDE.__init__(self)

    def EditSource(self, scriptSource):
        coat.dialog().text(scriptSource.FilePath.ToCharPtr()).ok().show()

coat_IDE = CoatIDE()

coat.cIDE.SetDefaultIDE(coat_IDE)